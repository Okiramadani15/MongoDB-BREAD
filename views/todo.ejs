<%- include('./partials/headTodo') %>
    <div class="container-list">
        <div class="h1-wrapper">
            <h1>Todo List</h1>
        </div>
        <div class="container" style="padding: 0px;">
            <div class="container-search">
                <div class="search-wrapper">
                    <div class="title-search">
                        <label for="title">Title</label>
                        <input oninput="find()" id="title" class="input" type="text" placeholder="insert your title">
                    </div>
                    <div class="deadline-search">
                        <label for="deadline">Deadline</label>
                        <div class="start-end">
                            <input id="startDate" class="input" type="datetime-local">&nbsp;
                            <p>s.d.</p>&nbsp;
                            <input id="endDate" class="input" type="datetime-local">
                        </div>
                    </div>
                    <div class="complete-search">
                        <label for="complete">Complete</label>
                        <select class="input" style="background-color: #ffffff;" name="complete"
                            id="complete-choose">
                            <option disabled selected>-select complete-</option>
                            <option value="false">Not Yet</option>
                            <option value="true">Done</option>
                        </select>
                    </div>
                    <div class="complete-search">
                        <div class="btn btn-success" id="btn-deadline">
                            <a id="sortDeadline" class="btn p-0" onclick="sortDeadlineAsc('deadline')">
                                <div  class="d-inline-block position-relative" style="height: 10px;">
                                    <i class="fa-solid fa-caret-up position-absolute bottom-0 start-0 p-0"
                                        style="color: #ffffff;"></i>
                                    <i class="fa-solid fa-caret-down position-absolute top-0 start-0 p-0"
                                        style="color: #ffffff;"></i>
                                </div>
                            <span class="ms-3 fw-bold sbd" >sort by deadline</span>
                            </a>
                        </div>
                         <div class="input-findreset">
                            <button type="button" onclick="findReset()" class="btn btn-warning"><i
                                    class="fa-solid fa-arrows-rotate"></i></button>&nbsp;
                            <button type="button" onclick="find()" class="btn btn-info"><i
                                    class="fa-solid fa-magnifying-glass"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <form onsubmit="addData(event)">
            <div class="search-input-wrapper">
                <input id="add-title" type="text" class="input-search" placeholder="Title">&nbsp;
                <button type="submit" class="btn btn-outline-primary"><i class="fa-solid fa-circle-arrow-down"
                        style="color: #3584e4;"></i></button>
            </div>
        </form>
            <div class="container-todo" id="todo-list">
            </div>
        </div>
    </div>

    <!--  Delete -->
    <div class="modal fade" id="deleteData" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Confirmation</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>are you sure?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button id="btn-delete" type="submit" class="btn btn-primary" onclick="deleteData()">Yes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- update -->
    <div class="modal fade" id="updateData" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Update Todo</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="form-container" id="form-user">
                        <div class="form-add">
                            <label class="ulabel-title" for="title">Title</label>
                            <input class="input-add" type="text" id="utitle" required>
                        </div>
                        <div class="form-add">
                            <label class="ulabel-deadline" for="deadline">Deadline</label>
                            <input class="input-add1" type="datetime-local" id="udeadline" required>
                        </div>
                        <div class="form-add">
                            <label class="ulabel-complete" for="complete">Complete</label>
                            <div class="input-complete-edit">
                                <input class="checkbox" type="checkbox" name="complete" id="ucomplete" value="true">
                                Done
                            </div>
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button id="btn-update" type="button" onclick="updateData()" class="btn btn-primary">Save change</button>
                </div>
                </form>
            </div>
        </div>
    </div>
    <!-- update selesai  -->
